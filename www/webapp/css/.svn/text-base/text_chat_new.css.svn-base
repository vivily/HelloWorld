
#text_chat_area
{
	padding: 8px;
	width: 315px;
	background: #809090;
	border: #404040 0px solid;
	border-radius: 10px;
	-webkit-box-shadow: 7px 7px 7px #303030;
	-moz-box-shadow: 7px 7px 7px #303030;
	float: left;
	margin-right: 20px;
}
   

#chat_panel
{
	width: 284px;
	height: 330px;
	border: 2px #707070 solid;
	padding: 8px;
	background: #fefefe;
	font: 12px arial,sans-serif;
	margin-top: 6px;
	margin-left: 5px;
	margin-right: 6px;
	vertical-align:text-center;
	overflow-y: auto; 
}

#enter_text_field
{
	width: 300px;
	height: 30px;
	border: 2px #707070 solid;
	background: #eeffee;
	font: 14px arial,sans-serif;
	font-weight: bold;
	margin-left: 5px;
	margin-bottom: 6px;

}

.chat_entry
{
	padding-left: 3px;
	margin-bottom: 6px;
	background: #f1fbdd; 
	color: #555555;
	width: 95%;
	border: #a5c74a 1px solid;
	border-radius: 5px;
	/*background-image: -webkit-linear-gradient(top, #a0e051 , white 45%, white 85%, #e7f7d4 95%);*/
	background-image: -webkit-linear-gradient(top, #e7f7d4 , white 55%, white 85%, #eeffee 95%); 
	background-image: -moz-linear-gradient(top, #e7f7d4 , white 55%, white 85%, #eeffee 95%);
}
.chat_content
{
	margin-left: 10px;
	margin-top: 2px;
	font-weight: bold;
	font-size: 14px;
	border: #568016 0px solid;
	padding:	2px;
	padding-left: 3px;
	/*background: #eafbca; */
	width: 240;
	border-radius: 5px;
	word-wrap:break-word;
	opacity: 1;
	color: #000000;
}

.clipart
{
height: 30px;
}

#submit
{
position:absolute; 
left: 250; 
width:65px; 
height: 20px; 
padding:4px; 
display:inline; 
color: #333333; font-size:16px; 
-webkit-box-shadow: 4px 4px 4px #333333;
-moz-box-shadow: 4px 4px 4px #333333;
background: #CCCCCC;
border-radius: 5px;
text-align: center;
}